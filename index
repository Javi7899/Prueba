    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const socialContainer = document.getElementById('socialContainer');
            const socialScreens = document.querySelectorAll('.social-screen');
            const dots = document.querySelectorAll('.dot');
            let currentIndex = 0;
            let isScrolling = false;
            let startY, currentY;
            
            // Configuraci√≥n inicial
            arrangeScreens();
            
            // Touch events para m√≥vil
            socialContainer.addEventListener('touchstart', handleTouchStart, { passive: false });
            socialContainer.addEventListener('touchmove', handleTouchMove, { passive: false });
            socialContainer.addEventListener('touchend', handleTouchEnd);
            
            // Wheel event para desktop
            socialContainer.addEventListener('wheel', handleWheel, { passive: false });
            
            // Click en los dots
            dots.forEach(dot => {
                dot.addEventListener('click', function() {
                    const targetIndex = parseInt(this.getAttribute('data-page'));
                    if (targetIndex !== currentIndex) {
                        currentIndex = targetIndex;
                        updateScreenPosition();
                    }
                });
            });
            
            // Redes sociales reales (simuladas)
            document.querySelectorAll('[data-social]').forEach(screen => {
                const social = screen.getAttribute('data-social');
                const icon = screen.querySelector('.nav-icon.active') || screen.querySelector('.nav-icon');
                
                icon.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Animaci√≥n de feedback
                    this.style.transform = 'scale(0.8)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 200);
                    
                    // Redirigir a la red social real
                    setTimeout(() => {
                        let url;
                        switch(social) {
                            case 'instagram': url = 'https://instagram.com/fckfacts.corp'; break;
                            case 'tiktok': url = 'https://tiktok.com/@fckfacts.corp'; break;
                            case 'youtube': url = 'https://youtube.com/@CanalFckFacts'; break;
                        }
                        window.open(url, '_blank');
                    }, 300);
                });
            });
            
            function arrangeScreens() {
                socialScreens.forEach((screen, index) => {
                    screen.style.transform = `translateY(${index * 100}%)`;
                });
            }
            
            function updateScreenPosition() {
                if (isScrolling) return;
                isScrolling = true;
                
                socialContainer.style.transform = `translateY(-${currentIndex * 100}%)`;
                
                // Actualizar indicadores
                dots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === currentIndex);
                });
                
                // Efecto de rebote
                setTimeout(() => {
                    isScrolling = false;
                }, 800);
            }
            
            function handleTouchStart(e) {
                startY = e.touches[0].clientY;
                currentY = startY;
            }
            
            function handleTouchMove(e) {
                if (isScrolling) {
                    e.preventDefault();
                    return;
                }
                
                currentY = e.touches[0].clientY;
                const diff = startY - currentY;
                
                // Desplazamiento vertical
                if (Math.abs(diff) > 10) {
                    e.preventDefault();
                    
                    // Limitar el desplazamiento
                    const maxOffset = currentIndex === 0 ? 0 : 
                                     currentIndex === socialScreens.length - 1 ? diff/3 : diff;
                    
                    socialContainer.style.transform = `translateY(calc(-${currentIndex * 100}% - ${maxOffset}px))`;
                }
            }
            
            function handleTouchEnd() {
                const threshold = 50;
                const diff = startY - currentY;
                
                if (diff > threshold && currentIndex < socialScreens.length - 1) {
                    // Scroll hacia abajo
                    currentIndex++;
                } else if (diff < -threshold && currentIndex > 0) {
                    // Scroll hacia arriba
                    currentIndex--;
                }
                
                updateScreenPosition();
            }
            
            function handleWheel(e) {
                if (isScrolling) {
                    e.preventDefault();
                    return;
                }
                
                if (e.deltaY > 50 && currentIndex < socialScreens.length - 1) {
                    // Scroll hacia abajo
                    e.preventDefault();
                    currentIndex++;
                    updateScreenPosition();
                } else if (e.deltaY < -50 && currentIndex > 0) {
                    // Scroll hacia arriba
                    e.preventDefault();
                    currentIndex--;
                    updateScreenPosition();
                }
            }
        });
    </script>
</body>
